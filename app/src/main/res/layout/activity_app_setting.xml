<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themLightColor"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_25"
        android:layout_marginLeft="@dimen/padding_25"
        android:orientation="vertical">

        <!--返回按鈕-->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/action_settings"
            android:onClick="onBackToHomeNavigationPage"
            app:srcCompat="@drawable/back_button" />

        <!--標題-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_28"
            android:layout_marginBottom="@dimen/padding_30"
            android:text="@string/setting_title_name"
            android:textColor="@color/themBlue"
            android:textSize="@dimen/font_40"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--        通知按鈕-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding_25"
                android:paddingLeft="@dimen/padding_25"
                android:paddingEnd="@dimen/padding_25"
                android:paddingRight="@dimen/padding_25"
                android:paddingBottom="@dimen/padding_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_label_notification"
                    android:textSize="@dimen/font_20"
                    android:textColor="@color/text"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switch_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_ios_thumb"
                    android:track="@drawable/switch_ios_track_selector" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_1"
                android:background="@color/grayBorder" />
        </LinearLayout>


        <!--        私營政策-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_0"
            android:paddingRight="@dimen/padding_0">

            <Button
                android:id="@+id/privacy_policy_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_setting_naviagation_to_other_page"
                android:gravity="start"
                android:stateListAnimator="@null"
                android:text="@string/setting_label_private_policy"
                android:textAlignment="textStart"
                android:textColor="@color/text"
                android:textSize="@dimen/font_20"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_1"
            android:background="@color/grayBorder" />
        <!--        知識產權告示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_0"
            android:paddingRight="@dimen/padding_0">

            <Button
                android:id="@+id/intellectual_property_notice_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_setting_naviagation_to_other_page"
                android:gravity="start"
                android:stateListAnimator="@null"
                android:text="@string/setting_label_intellectual"
                android:textAlignment="textStart"
                android:textColor="@color/text"
                android:textSize="@dimen/font_20"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_1"
            android:background="@color/grayBorder" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_83"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_20"
        android:paddingBottom="@dimen/padding_20">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/setting_cover" />
    </LinearLayout>
</LinearLayout>